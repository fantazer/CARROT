include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.main-slider
		- for (var i=0;i<4;i++)
			a(href="#").main-slider__el-wrap
				.main-slider__el(style="background-image:url('img/slider-1.jpg')")
	.content
		.main-cont
			.kind
				// .icon--pink = fill #c9346e; .icon--red = fill #d6362e;.icon--green =	fill #019547;.icon--violet = fill #6421bc;.icon--mark = fill $mark;.icon--sky =  fill #1db4aa
				//toggle class .kind__el--active
				.kind__el(data-item="kind" data-group="calendar")
					+icon("calendar","icon icon--pink")
					span Сезонный продукт
				.kind__el(data-item="kind" data-group="hot")
					+icon("hot","icon icon--red")
					span Хит
				.kind__el(data-item="kind" data-group="plant")
					+icon("plant","icon icon--green")
					span Выращено на Кубани
				.kind__el(data-item="kind" data-group="play")
					+icon("play","icon icon--green")
					span Начало сезона
				.kind__el(data-item="kind" data-group="flag")
					+icon("flag","icon icon--violet")
					span Конец сезона
				.kind__el(data-item="kind" data-group="less")
					+icon("less","icon icon--mark")
					span Низкая цена
				.kind__el(data-item="kind" data-group="king")
					+icon("king","icon icon--sky")
					span Эксклюзив
		.main-cont
			.product-section#fruits
				.title-row
					.title Фрукты
						.title-val 15
					a(href="#").title__more Смотреть все
				.product-cont
					- for (var i=0;i< 9;i++)
						+product("item-1.jpg")
			.product-section#vegetables
				.title-row
					.title Овощи
						.title-val 15
					a(href="#").title__more Смотреть все
				.product-cont
					- for (var i=0;i< 9;i++)
						+product("item-2.jpg")


	+footer()
include ./block_html/_script.pug
