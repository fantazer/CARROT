include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.content
		.main-cont
			.lk
				.lk-toolbar
					a(href="#").lk-toolbar__el Личные данные
					a(href="#").lk-toolbar__el.lk-toolbar__el--active История заказов
					a(href="#").lk-toolbar__el
						.lk-toolbar__el-text Бонусы
						.bonus-val 240Б
				.lk-content
					.lk-title История заказов
					.history
						- for (var j=0;j<5;j++)
							.history__el
								.history__el-head
									.history__el-info
										.history__el-icon
											+icon("arrow-coner-top","icon")
										.history__el-numb # 414393
										.history__el-date 15.08.2019
									.history__el-state
										.history__el-state-text Статус заказа
										.history__el-state-val
											if(j<4)
												.history__el-state-icon
													+icon("clock","icon")
												.history__el-state-info ждёт вас
											else
												.history__el-state-icon
													+icon("check-round","icon")
												.history__el-state-info выполнен
								.history__el-cont
									.history__el-wrap
										.history-list
											- for (var i=0;i<3;i++)
												.history-list__el
													.history-list__el-img(style="background-image:url('img/item-3.jpg')")
													.history-list__el-info
														.history-list__el-title Яблоки Моди
														.history-list__el-text Россия, Краснодарский край
														.history-list__el-row
															.history-list__el-cost 350 р
															.history-list__el-items ~ 0,5 кг
														.history-rating
															span ваша оценка
															.star
																.star-el
																	+icon("star","icon")
																.star-el
																	+icon("star","icon")
																.star-el
																	+icon("star","icon")
																.star-el
																	+icon("star","icon")
																.star-el
																	+icon("star","icon")
											.history-total
												.history-total-info
													.history-total-title Итого:
													.history-total-val 399 р
														//.price-valute р
										.history-descr
											.history-descr-title Информация о заказе
											.history-descr__row
												.history-descr__title Способ оплаты
												.history-descr__val Наличкой при получении
											.history-descr__row
												.history-descr__title Доставка
												.history-descr__val Самовывоз по адресу: ул. Московская, 46/2
											.history-descr__row
												.history-descr__title Фамилия и имя
												.history-descr__val Константинопольский Константин
											.history-descr__row
												.history-descr__title Телефон
												.history-descr__val 8 423 442 23 44
											.history-descr__row
												.history-descr__title Электронная почта
												.history-descr__val diamond@gmail.com
											.btn--md.btn--mark.btn--full.btn--extend Повторить заказ
											.btn--md.btn--light.btn--full Оставить отзыв
+footer()
include ./block_html/_script.pug
