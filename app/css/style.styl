@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em


.main-cont
	center(1260px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(768px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9)
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 420px
	z-index -1
	left -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1)
	position: relative
	z-index 1000
	left initial
	transition transform .6s, opacity .8s
.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// header
.header
	position: relative
.header-top-wrap
	+below(768px)
		padding: 0
	padding-top 15px
	background: white
//.main-cont
.header-top
	+below(768px)
		padding: 10px 0
	f()
	align-items: center
.logo
	+below(1024px)
		width: 150px
	margin-right: 3%
.header-info--location
	+below(1024px)
		display: none
	margin-right: 5%
.header-info
	width: 25%
	f()
	cp()
	align-items: center
	margin-right: 3%
	margin-bottom: 10px
	.divider
		color $snow
		@extend .type--md

		display: inline-block
		margin: 0 5px
.header-info__icon
	margin-right: 10px
	flex(mid)
	.icon
		size 24px
		fill $mark

.header-info__val
	@extend .type--main
	white-space nowrap
	color $yellow
	font-weight 700
	margin-bottom: 5px
	display inline-block

.header-info__text
	color #aaaaaa
	@extend .type--sm
.header-info--contact
	+below(1024px)
		display: none


.nav
	+below(1024px)
		display: none
	f()
	margin-left: auto
.nav__el
	display: inline-block
	margin: 0 10px
	color #aaaaaa
	white-space nowrap
	tr(all)
	&:hover
		color $red

.header-auth
	+below(1024px)
		display: none
	f()
	cp()
	position: relative
	align-items: center
	margin-left: auto
	margin-right: 20px
	.icon
		margin-right: 10px
		size 20px
		fill  #c8c8c8
		tr()
	&:hover
		.icon
			fill $red
		span
			color $red
.header-auth--true
	.header-auth-state--false
		display: block
	.header-auth-state--true
		display: none
.header-auth-state--false
	display: none
	position: relative
	span
		tr()
.header-auth-state--true
	cp()
	span
		tr(all)
		color $gray
		&:hover
			color black

//
.slide-header-auth
	color white
	flex(mid)
	.icon
		margin-right: 10px
		size 20px
		fill $yellow
.slide-header-auth--true
	.slide-header-auth-state--false
		f()
	.slide-header-auth-state--true
		display: none
.slide-header-auth-state--false
	display: none
	position: relative
	span
		color white
		font-weight: 500
		display: block

.slide-header-auth-state--true
	cp()
	span
		tr(all)
		color $gray
		link(#f5f5f5)
		&:hover
			color black
.slide-header-auth__bonus
	padding: 3px 8px
	br(20px)
	background: $yellow
	font-weight: 500
	line-height: 1
	flex(mid)
	margin-left: 20px
	span
		color $dark
		display: inline-block
		//margin-top: -3px
		white-space nowrap

.header-menu-wrap
	+below(1024px)
		padding: 0
		border-top 1px solid $border-color
	white-space nowrap
	overflow-x auto
	//border-top 1px solid $border-color
	border-bottom 1px solid $border-color
	padding: 10px 0
	position: relative
	overflow-y: hidden
	.logo
		display: none
.header-menu
	+below(1024px)
		padding: 15px 0
	align-items: stretch
	f()
.header-nav
	align-items: center
	f()
.header-nav__el
	margin-right: 20px
	tr()
	flex(mid)
	@extend .type--sm
	up()
	font-weight 700
	height: 100%
	&:hover
		color $red

.header-cont
	f()
	width: 40%

.cart-wrap
	f()
	cp()
	margin-left: auto
	align-items: center

	.icon--close
		display: none
.cart-cost
	margin-right: 10px
	@extend .type--main
	font-weight: 700
.cart
	+below(1024px)
		size 40px
	br(10px)
	flex(mid)
	fl()
	tr()
	position: relative
	size 50px
	border 2px solid $mark
	.icon
		size 24px
		fill $mark
		margin-left: -4px
.cart-val
	font-weight 700
	@extend .type--sm

.header-search
	+below(1024px)
		display none
	f()
	align-items center
	margin-left auto
	position relative
	margin-right: 10px
	width: 18%
	.input
		br(10px)
		background: none
		border 1px solid transparent
		padding: 15px 15px 15px 45px
		width: 100%
		&:focus
			border 1px solid rgba(189, 189, 189, 0.4)
	.icon
		fill $mark
		size 24px
		margin-right: 15px
		position absolute
		left 10px
		top calc(50% - 12px)

// header === end

//slide menu
.head-toggle
	flex(mid)
	cp()

	margin-right: 10px
	+above(1025px)
		display: none
	.icon
		size 25px
		fill black
	.icon-close
		display: none

.head-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-menu
	+above(1025px)
		display: none !important
	+below(480px)
		width: 100%
	background: $dark
	position: fixed
	height: calc(100% - 60px) //Отступ хедер
	z-index 1250
	top 60px
	left 0
	width: 320px
	transform translateX(-110%)
	tr(all)
.slide-menu--open
	transform translateX(0%)
	overflow-y: auto
.slide-menu__list-el
	display: block
	margin-bottom: 30px
	color white
	font-size: 16px
	text-align: center
	tr(all)
	&:hover
		color $yellow
	&:last-child
		margin-bottom: 0
.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important

.cart-wrap--mobile
	+above(1025px)
		display: none
.cart-wrap--desctop
	+below(1024px)
		display: none


//slide menu  === end

// slider
.main-slider__el
	+below(640px)
		display: none
	bg-full()
	padding: 14% 5%

.main-slider
	+below(760px)
		display: none
	.slick-dots
		+below(640px)
			bottom 10px
		bottom 20px

.slick-dots
	width: 100%
	bottom -40px
	.dot
			background: white
			size 12px
			display: block
			br(3px)
			border 1px solid #e7e7e7
	.slick-active
			.dot
				border 1px solid transparent
				background: $mark
// slider === end

// icon color
.icon--pink
	fill #c9346e
.icon--red
	fill #d6362e
.icon--green
	fill #019547
.icon--violet
	fill #6421bc
.icon--mark
	fill $mark
.icon--sky
	fill #1db4aa
// icon color === end

// kind
.kind
	f()
	fw()
	margin-bottom: 50px
.kind__el
	f()
	align-items center
	padding: 10px 15px
	br(5px)
	border 1px dashed $border-color
	margin-right: 10px
	margin-bottom: 10px
	@extend .type--sm
	flex-grow 1
	cp()
	tr()
	&:hover
		background: $dark
		border 1px solid $dark
		span
			color white
		.icon
			fill white!important
	.icon
		size 20px
		margin-right: 5px
// kind === end

// title
.title-row
	+below(640px)
		margin-bottom: 30px
	position: relative
	font-weight: 700
	margin-bottom: 40px
	f()
	fw()
	align-items center
	.icon
		+below(768px)
			size 25px
		+below(640px)
			display: none
		tr(all)
		size 50px
		fill $mark
		&:hover
			fill black
	.title
		+below(640px)
			width: 100%
			margin-bottom: 10px
			margin-right: 0
		margin-bottom: 0
		margin-right: 20px
		margin-top: -5px
.title
	@extend .type--xl
	margin-bottom: 40px
	font-weight: 700
	position relative
	line-height: 1

.title--md
	@extend .type--lg
	font-weight: 700
	position relative
	line-height: 1
	margin-bottom: 30px
.title-val
	+below(640px)
		display none
	position absolute
	font-size: 14px
	color $gray
	top -5px
	right: -15px

.title__more
	+below(767px)
		margin-left: 0
	font-size: 12px
	link($mark)
	cp()
	font-weight: 400
	margin-left: 20px
	align-self flex-end
	color $mark
.title-back
	display block
	margin-right: 5%

// title === end

// product list
.product-cont
	+below(1024px)
		grid-template-columns: repeat(3, 1fr)
		margin: 30px 0
	+below(640px)
		grid-template-columns: repeat(2, 1fr)
	+below(480px)
		grid-template-columns: 1fr
	//flex(between)
	margin: 50px 0
	display: grid
	grid-gap 30px
	grid-template-columns: repeat(4, 1fr)
	overflow: hidden

.product-el
	tr(all)
	f()
	fl()
	cp()
	background-color #ffffff
	position: relative
	&:hover
		.product__title
			color $mark
.product-el--add
	size 36px
	br(5px)
	flex(mid)
	position absolute
	top: 10px
	right: 10px
	background: #373A48
	z-index 10
	.icon
		fill white
		size 20px

.label-wrap
	position: absolute
	top:10px
	left 10px
	z-index 10
	f()
	fl()
	align-items: flex-start
.label-el-cont
	flex(mid)
.label-el
	+below(480px)
		padding: 10px
		font-size: 12px
	tr(all)
	cp()
	padding: 5px 10px
	br(5px)
	margin-bottom: 5px
	font-size: 12px
	background: white
	display inline-block
	.icon
		size 20px
	span
		display inline-block
		margin-left: 5px
.product__img
	margin-bottom: 15px
	flex(mid)
	position relative
	img
		margin: 0 auto
		tr(all)
		width: 100%

.product__img-el
	tr(all)
	width: 100%
	height: 100%
	bg-full()
	padding: 50% 10%
.product-rating
	position absolute
	flex(mid)
	bottom 0
	left 0
	background: $dark
	padding: 8px 15px
	border-radius 0 5px 0 5px
	color white
	font-size: 14px
	.icon
		size 16px
		margin-right: 5px
		fill $mark
.product__cont
	f()
	fl()
	flex-grow 1

.product__title
	margin-bottom: 5px
	color $dark
	tr(all)
	@extend .type--md
	font-weight 700
	display: block

.product__text
	margin-bottom: auto
	line-height: 1.6
	tr()
	color #aaaaaa

.product-footer
	flex(between)
	margin-top: 10px

.product-price
	+below(1200px)
		font-size: 14px
	+below(1024px)
		font-size: 24px
	+below(640px)
		font-weight: 700
	width: 30%
	background-color #ffffff
	@extend .type--md
	font-weight 700

.product-weight
	color #24252a
	margin-right auto

.product-add
	+below(768px)
		font-size: 12px
	cp()
	@extend .type--sm
	tr(all)
	width: 45%
	text-align: center
	@extend .btn--md
	@extend .btn--light
	flex(mid)
	height: 50px
	white-space nowrap
	&:hover
		background: $mark

.product-incr
	+below(1200px)
		padding: 8px 5px
		.incr
			height: 30px
		.incr__nav
			size 30px
		.incr__val
			height: 30px
	flex(mid)
	width: 50%
	display: none
	height: 50px
	.incr
		width: auto
.product-footer-numb
	.product-price
		border-right: 0
	.product-incr
		display: flex
	.product-get
		display: none
// product list === end

// incr
.elements-icr-block
	.incr
		flex(mid)
		width: 100%
	width: 100%

.incr
	f()
	height 50px
	position relative
	width 160px

.incr--small
	width: 80px
	.incr__nav
		size 26px
		.icon
			size 10px
	.incr__val
		width: 25px
		font-size: 12px
		font-weight: 700

.incr__nav
	flex(mid)
	tr(background )
	br(4px)
	size 40px
	border 1px solid $mark
	background white
	.icon
		size 14px
		fill $mark
	&:hover
		cp()
		border-color $mark
		.icon
			fill $mark
	&:active
		background-color darken($mark,5)
		.icon
			fill white
.incr__val
	flex(mid)
	background white
	size 50px 40px
	font-size 20px
	position relative
	tr(all)
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none


// incr === end