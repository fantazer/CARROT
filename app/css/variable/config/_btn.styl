// ============================ Buttons ============================
.btn
	br(5px)
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	font-weight: 700
	&:hover
		cursor pointer

.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px

.btn--md
	@extend .btn
	font-size 16px
	padding 15px 35px

.btn--lg
	+below(640px)
		padding: 10px 15px
	@extend .btn
	padding 15px 65px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background $mark
	.nav-icon
		fill white
	&:hover
		background-color lighten($mark,5)
		color white!important
	&:active
		background-color lighten($mark,5)
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--light
	@extend .btn
	border 1px solid $mark
	background-color #ffffff
	&:hover
		background-color $mark
		color white
	.nav-icon
		fill $mark

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--icon
	flex(mid)
	.nav-icon
		margin-left: 10px

.nav-icon
	size 20px
	display inline-block

.btn--icon--left
	.nav-icon
		margin-left: 0
		margin-right: 10px

.btn-row-mid
	flex(mid)
	margin: 30px 0

.btn--full
	width: 100%
	display block
.btn--extend
	margin-bottom: 20px
