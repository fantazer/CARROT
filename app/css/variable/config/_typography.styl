//font(name,file,size)
font('Montserrat','Montserrat-Bold',700)
font('Montserrat','Montserrat-Regular',400)

$v-font =  'Montserrat', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

/*

font-size 12px
@extend .type--xs

font-size 14px
@extend .type--sm

font-size 16px
@extend .type--main

font-size 22px
@extend .type--md

font-size 40px
@extend .type--lg

font-size 40px
@extend .type--xl
*/

.type--xs
	typeSize(12,12)

.type--sm
	typeSize(14,12)

.type--main
	typeSize(16,14)

.type--md
	typeSize(22,18)

.type--lgx
	typeSize(32,24)

.type--lg
	typeSize(40,28)

.type--xl
	typeSize(40,28)

.type--bold
	font-weight bold

.type--center
	text-align center

h1
	@extend .type--lg
h2
	@extend .type--lgx
h3
	@extend .type--md
h4
	@extend .type--main
h5
	@extend .type--sm

a
	color $link-color
	text-decoration: none
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none

.type--mark
	color $mark

.text
	p
		line-height: 1.6
		margin-bottom: 30px
	ul
		margin-bottom: 30px
		li
			line-height: 1.6
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0
	a
		color $mark
// icons
.icon-row
	f()
	fw()
	align-items center

.icon--sm
	size 16px

.icon--md
	size 24px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--gray
	fill $gray
// icons === end